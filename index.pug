doctype html
html(lang="ru-RU")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Клиника плюс - главная
  body(data-simplebar)
    .wrapper
      .wrapper__body
        include src/components/header/header.pug
        - var basePath = "./pages"
        +header(basePath)
        main.main
          include src/blocks/cta/cta.pug
          include src/blocks/prices/prices.pug
          include src/blocks/steps/steps.pug
          include src/blocks/about/about.pug
          include src/blocks/licenses/licenses.pug
          include src/blocks/doctors/doctors.pug
          include src/blocks/reports/reports.pug
      include src/components/footer/footer.pug
      - var basePath = "./pages"
      +footer(basePath)
    script(src="https://kit.fontawesome.com/214ec3578d.js", crossorigin="anonymous")
    script(type="module", src="src/main.js")